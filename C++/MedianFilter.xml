<?xml version="1.0" encoding="utf-8"?>
<executable>
<category>Filtering</category>
<title>Median Filter</title>
<description>Median Filter of a image</description>

<parameters>
  <label>IO</label>
  <description>Input/Output parameters</description>

  <image>
    <name>input</name>
    <label>image input</label>
    <channel>input</channel>
    <index>0</index>
    <description>image input</description>
  </image>

  <image>
    <name>output</name>
    <label>image output</label>
    <channel>output</channel>
    <index>1</index>
    <description>image output</description>
  </image>

  <integer>
    <name>radius_input</name>
    <label>radius value</label>
    <longflag>radius</longflag>
    <flag>r</flag>
    <description>radius value</description>
    <constraints>
      <minimum>0</minimum>
      <maximum>6</maximum>
    </constraints>
  </integer>

</parameters>

</executable>

